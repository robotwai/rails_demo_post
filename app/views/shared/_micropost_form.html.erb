<%= form_for(@micropost) do |f| %>
	<%= render 'shared/error_message',object: f.object %>
	<div class="field">
		<%= f.text_area :content,placeholder: "Compose new micropost..." %>
	</div>
	<%= f.submit "Post",class: "btn btn-primary" %>
	<span class="picture">
		选择要上传的图片<%= f.file_field :picture , multiple: true,accept: 'image/jpeg,image/gif,image/png' %>
	</span>
	<span class="video">
		选择要上传的视频<%= f.file_field :video ,accept: 'video/mp4,video/mov,video/avi'%>
	</span>
<% end %>

